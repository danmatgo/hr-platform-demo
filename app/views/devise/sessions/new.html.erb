<% content_for :title, "Sign in" %>

<div class="max-w-md mx-auto">
  <div class="card"><div class="card-body">
    <h1 class="text-xl font-semibold text-gray-900">Sign in</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mt-4">
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
      </div>
      <div class="mt-4">
        <%= f.label :password, class: "label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
      </div>
      <div class="mt-4 flex items-center justify-between">
        <label class="inline-flex items-center text-sm text-gray-700">
          <%= f.check_box :remember_me %>
          <span class="ml-2">Remember me</span>
        </label>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-sm text-blue-600 hover:text-blue-500" %>
      </div>
      <div class="mt-6">
        <%= f.submit "Sign in", class: "btn btn-primary w-full" %>
      </div>
    <% end %>
    <div class="mt-4 text-sm text-gray-700">
      <span>Donâ€™t have an account?</span>
      <%= link_to "Sign up", new_registration_path(resource_name), class: "text-blue-600 hover:text-blue-500 ml-1" %>
    </div>
  </div></div>
</div>
