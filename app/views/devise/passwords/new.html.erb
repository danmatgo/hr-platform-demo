<% content_for :title, "Forgot password" %>

<div class="max-w-md mx-auto">
  <div class="card"><div class="card-body">
    <h1 class="text-xl font-semibold text-gray-900">Reset your password</h1>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="mt-4">
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
      </div>
      <div class="mt-6">
        <%= f.submit "Send reset instructions", class: "btn btn-primary w-full" %>
      </div>
    <% end %>
    <div class="mt-4 text-sm text-gray-700">
      <%= link_to "Back to sign in", new_session_path(resource_name), class: "text-blue-600 hover:text-blue-500" %>
    </div>
  </div></div>
</div>
