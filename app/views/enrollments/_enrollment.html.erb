<div id="<%= dom_id enrollment %>" class="card">
  <div class="card-body">
    <div class="flex items-start justify-between">
      <p class="card-title"><%= enrollment.employee&.full_name || "Employee" %></p>
      <div class="flex items-center space-x-2">
        <%= icon_button_edit(enrollment) %>
        <%= icon_button_delete(enrollment) %>
      </div>
    </div>
    <p class="card-subtitle mt-2">Plan: <%= enrollment.benefit_plan&.name %></p>
    <div class="mt-3 grid grid-cols-3 gap-3">
      <div><p class="text-xs text-gray-600">Enrollment</p><p class="text-sm text-gray-900"><%= enrollment.enrollment_date %></p></div>
      <div><p class="text-xs text-gray-600">Status</p><p class="text-sm text-gray-900"><%= enrollment.status %></p></div>
      <div><p class="text-xs text-gray-600">Employee ID</p><p class="text-sm text-gray-900"><%= enrollment.employee_id %></p></div>
    </div>
  </div>
</div>
