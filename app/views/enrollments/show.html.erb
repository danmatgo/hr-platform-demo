<% content_for :title, "Showing enrollment" %>

<div class="w-full">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-semibold text-gray-900">Enrollment</h1>
    <div class="flex items-center space-x-2">
      <%= link_to "Edit", edit_enrollment_path(@enrollment), class: "btn btn-muted" %>
      <%= button_to "Destroy", @enrollment, method: :delete, class: "btn btn-primary", data: { turbo_confirm: "Are you sure?" } %>
    </div>
  </div>
  <%= render @enrollment %>
  <div class="mt-4">
    <%= link_to "Back to enrollments", enrollments_path, class: "btn btn-muted" %>
  </div>
</div>
