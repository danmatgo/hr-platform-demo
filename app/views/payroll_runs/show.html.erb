<% content_for :title, "Showing payroll run" %>

<div class="w-full">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-semibold text-gray-900">Payroll Run</h1>
    <div class="flex items-center space-x-2">
      <%= link_to "Edit", edit_payroll_run_path(@payroll_run), class: "btn btn-muted" %>
      <%= button_to "Destroy", @payroll_run, method: :delete, class: "btn btn-primary", data: { turbo_confirm: "Are you sure?" } %>
    </div>
  </div>
  <%= render @payroll_run %>
  <div class="mt-4">
    <%= link_to "Back to payroll runs", payroll_runs_path, class: "btn btn-muted" %>
  </div>
</div>
