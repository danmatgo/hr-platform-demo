<div id="<%= dom_id time_entry %>" class="card">
  <div class="card-body">
    <div class="flex items-start justify-between">
      <p class="card-title"><%= time_entry.work_date %></p>
      <div class="flex items-center space-x-2">
        <%= icon_button_edit(time_entry) %>
        <%= icon_button_delete(time_entry) %>
      </div>
    </div>
    <p class="card-subtitle mt-2">Employee ID: <%= time_entry.employee_id %></p>
    <div class="mt-3 grid grid-cols-3 gap-3">
      <div><p class="text-xs text-gray-600">Hours</p><p class="text-sm text-gray-900"><%= time_entry.hours_worked %></p></div>
      <div><p class="text-xs text-gray-600">Overtime</p><p class="text-sm text-gray-900"><%= time_entry.overtime_hours %></p></div>
      <div><p class="text-xs text-gray-600">Notes</p><p class="text-sm text-gray-900 truncate"><%= time_entry.notes %></p></div>
    </div>
  </div>
</div>
