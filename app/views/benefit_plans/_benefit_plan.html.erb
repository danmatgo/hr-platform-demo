<div id="<%= dom_id benefit_plan %>" class="card">
  <div class="card-body">
    <div class="flex items-start justify-between">
      <p class="card-title"><%= benefit_plan.name %></p>
      <div class="flex items-center space-x-2">
        <%= icon_button_edit(benefit_plan) %>
        <%= icon_button_delete(benefit_plan) %>
      </div>
    </div>
    <p class="card-subtitle mt-2"><%= benefit_plan.coverage_type %></p>
    <p class="mt-3 text-sm text-gray-900">Cost: <%= number_to_currency(benefit_plan.cost) %></p>
    <p class="mt-2 text-sm text-gray-600"><%= benefit_plan.description %></p>
  </div>
</div>
