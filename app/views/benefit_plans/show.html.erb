<% content_for :title, "Showing benefit plan" %>

<div class="w-full">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-semibold text-gray-900">Benefit Plan</h1>
    <div class="flex items-center space-x-2">
      <%= link_to "Edit", edit_benefit_plan_path(@benefit_plan), class: "btn btn-muted" %>
      <%= button_to "Destroy", @benefit_plan, method: :delete, class: "btn btn-primary", data: { turbo_confirm: "Are you sure?" } %>
    </div>
  </div>
  <%= render @benefit_plan %>
  <div class="mt-4">
    <%= link_to "Back to benefits", benefit_plans_path, class: "btn btn-muted" %>
  </div>
</div>
