<% content_for :title, "Benefit plans" %>

<div class="w-full">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-2xl font-semibold text-gray-900">Benefits</h1>
      <p class="text-sm text-gray-600">Manage company benefit plans</p>
    </div>
    <%= link_to "New benefit plan", new_benefit_plan_path, class: "btn btn-primary" %>
  </div>

  <% if @benefit_plans.any? %>
    <%= render partial: 'shared/table', locals: { include_actions: true, columns: [
      { header: 'Name', key: :name },
      { header: 'Coverage', key: :coverage_type },
      { header: 'Cost', proc: ->(r){ number_to_currency(r.cost) } }
    ], rows: @benefit_plans } %>
  <% else %>
    <div class="card"><div class="card-body">
      <p class="text-sm text-gray-600">No benefit plans found.</p>
      <div class="mt-3"><%= link_to "Add a plan", new_benefit_plan_path, class: "btn btn-primary" %></div>
    </div></div>
  <% end %>
</div>
