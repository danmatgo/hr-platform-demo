<% content_for :title, "Showing employee" %>

<div class="w-full">
  <div class="flex items-center justify-between mb-6">
    <h1 class="app-title">Employee</h1>
    <div class="flex items-center space-x-2">
      <%= link_to "Edit", edit_employee_path(@employee), class: "btn btn-muted" %>
      <%= button_to "Destroy", @employee, method: :delete, class: "btn btn-danger", data: { turbo_confirm: "Are you sure?" } %>
      <%= link_to "Back", employees_path, class: "btn btn-muted" %>
    </div>
  </div>
  <%= render @employee %>
</div>
