<div class="w-full">
  <div class="flex items-center justify-between mb-6">
    <h1 class="app-title"><%= greeting_for_time %>, <%= current_user_display_name %>!</h1>
    <div class="flex items-center space-x-2">
      <%= link_to "View All Paystubs", payroll_runs_path, class: "btn btn-muted" %>
      <%= link_to "Request Time Off", time_entries_path, class: "btn btn-primary" %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-6">
    <div class="card"><div class="card-body">
      <p class="card-title">Benefit Enrollment</p>
      <p class="card-subtitle mt-2">You can track your open enrollment progress.</p>
      <div class="mt-3">
        <div class="h-2 rounded-full bg-gray-100">
          <div class="h-2 rounded-full bg-green-500" style="width: 60%"></div>
        </div>
        <p class="text-xs text-gray-600 mt-2">Completed: 11 of 19</p>
      </div>
      <div class="mt-4">
        <%= link_to "Continue", benefit_plans_path, class: "btn btn-primary" %>
      </div>
    </div></div>

    <div class="card"><div class="card-body">
      <div class="flex items-center justify-between">
        <p class="card-title">Pay</p>
        <%= link_to "View All Paystubs", payroll_runs_path, class: "btn btn-muted" %>
      </div>
      <div class="mt-3 grid grid-cols-2 gap-4">
        <div>
          <p class="text-xs text-gray-600">Latest Pay</p>
          <p class="text-sm font-semibold text-gray-900">$•••</p>
        </div>
        <div>
          <p class="text-xs text-gray-600">Upcoming Paycheck</p>
          <p class="text-sm font-semibold text-gray-900">4 Days</p>
        </div>
      </div>
      <div class="mt-3 grid grid-cols-3 gap-3">
        <div><p class="text-xs text-gray-600">Gross</p><p class="text-sm text-gray-900">$•••</p></div>
        <div><p class="text-xs text-gray-600">Taxes</p><p class="text-sm text-gray-900">$•••</p></div>
        <div><p class="text-xs text-gray-600">Deductions</p><p class="text-sm text-gray-900">$•••</p></div>
      </div>
    </div></div>

    <div class="card"><div class="card-body">
      <div class="flex items-center justify-between">
        <p class="card-title">Paid Time Off</p>
        <%= link_to "Request Time Off", time_entries_path, class: "btn btn-muted" %>
      </div>
      <div class="mt-3 grid grid-cols-3 gap-3">
        <div><p class="text-xs text-gray-600">Personal Time</p><p class="text-sm text-gray-900">32.6 Hours</p></div>
        <div><p class="text-xs text-gray-600">Sick</p><p class="text-sm text-gray-900">10 Hours</p></div>
        <div><p class="text-xs text-gray-600">Vacation</p><p class="text-sm text-gray-900">84 Hours</p></div>
      </div>
    </div></div>

    <div class="card"><div class="card-body">
      <p class="card-title">Anytime Enrollment</p>
      <p class="card-subtitle mt-2">Add or remove employee benefits anytime you like.</p>
      <div class="mt-4">
        <%= link_to "Enroll in a plan now", benefit_plans_path, class: "btn btn-primary" %>
      </div>
    </div></div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <div class="card"><div class="card-body">
      <h2 class="card-title">Life Events</h2>
      <p class="card-subtitle mt-2">Change your benefits based on qualifying life events.</p>
      <div class="mt-4">
        <%= link_to "Review", benefit_plans_path, class: "btn btn-muted" %>
      </div>
    </div></div>

    <div class="card"><div class="card-body">
      <h2 class="card-title">Contact us</h2>
      <div class="mt-3 space-y-3">
        <div class="flex items-center space-x-3">
          <div class="h-8 w-8 rounded-full bg-gray-200"></div>
          <div>
            <p class="text-sm font-medium text-gray-900">Benefits Specialist</p>
            <p class="text-xs text-gray-600">benefits@company.com</p>
          </div>
        </div>
        <div class="flex items-center space-x-3">
          <div class="h-8 w-8 rounded-full bg-gray-200"></div>
          <div>
            <p class="text-sm font-medium text-gray-900">HR Manager</p>
            <p class="text-xs text-gray-600">hr@company.com</p>
          </div>
        </div>
      </div>
    </div></div>
  </div>
</div>
